<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/timepicker_select</item>
        <item name="colorPrimaryDark">@color/timepicker_select</item>
        <item name="colorAccent">@color/timepicker_select</item>
    </style>

    <style name="DialogBoxTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/textbox_color</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FF000000</item>
    </style>
</resources>