<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/exam_grid"
    android:theme="@style/DialogBoxTheme">


    <EditText
        android:id="@+id/add_exam_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="@string/exam_title"
        android:inputType="text"
        android:textColorHint="#DDAAAAAA"
        android:textCursorDrawable="@drawable/text_cursor"
        app:backgroundTint="@color/textbox_select_color"
        app:layout_constraintBottom_toTopOf="@+id/add_exam_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/add_exam_class_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="@string/exam_course"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#DDAAAAAA"
        android:textCursorDrawable="@drawable/text_cursor"
        app:backgroundTint="@color/textbox_select_color"
        app:layout_constraintBottom_toTopOf="@+id/exam_time_picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TimePicker
        android:id="@+id/exam_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TimePickerTheme"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exam_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_shape"
        android:hint="@string/pick_date"
        android:textColor="#DD201B1B"
        app:layout_constraintBottom_toTopOf="@+id/add_exam_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/add_exam_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="@string/exam_location"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#DDAAAAAA"
        android:textCursorDrawable="@drawable/text_cursor"
        app:backgroundTint="@color/textbox_select_color"
        app:layout_constraintBottom_toTopOf="@+id/add_exam_class_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/add_exam_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="@string/pick_date"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#DDAAAAAA"
        android:textCursorDrawable="@drawable/text_cursor"
        app:backgroundTint="@color/textbox_select_color"
        app:layout_constraintBottom_toTopOf="@+id/add_exam_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>